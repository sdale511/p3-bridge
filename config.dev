{
  "defaults": {
    "mode": "tcp",
    "tcpHost": "192.168.4.75",
    "tcpPort": 5403,
    "udpPort": 5303,
    "bindAddress": "0.0.0.0",
    "connectTimeoutMs": 8000
  },
  "post": {
    "baseUrl": "http://localhost:3000",
    "path": "/ingest",
    "method": "POST",
    "timeoutMs": 8000,
    "retries": 5,
    "retryDelayMs": 500,
    "retryBackoffMultiplier": 2,
    "maxRetryDelayMs": 8000,
    "headers": {
      "Content-Type": "application/json"
    },
    "enabled": true
  },
  "logging": {
    "dir": "./logs",
    "console": true,
    "file": true,
    "httpFile": true,
    "jsonFile": true,
    "level": "info",
    "filename": "p3-bridge-%DATE%.log",
    "httpFilename": "p3-http-%DATE%.log",
    "jsonFilename": "p3-json-%DATE%.log",
    "datePattern": "YYYY-MM-DD",
    "maxFiles": "14d",
    "suppressStatus": true
  },
  "decoder": {
    "reconnect": {
      "baseDelayMs": 1000,
      "maxDelayMs": 30000,
      "backoffFactor": 1.8,
      "jitterRatio": 0.2,
      "connectTimeoutMs": 8000
    }
  },
  "admin": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 8080,
    "token": null
  },
  "timer": {
    "enabled": true,
    "baseUrl": "http://localhost:3000",
    "path": "/ingest",
    "intervalSec": 10,
    "timeoutMs": 5000,
    "retries": 2,
    "retryDelayMs": 250,
    "retryBackoffMultiplier": 2,
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
