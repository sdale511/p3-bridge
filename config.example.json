{
  "defaults": {
    "tcpPort": 5403,
    "udpListenPort": 5303,
    "udpSendPort": 5403,
    "mode": "tcp",
    "tcpHost": "127.0.0.1"
  },
  "post": {
    "enabled": true,
    "baseUrl": "https://example.com",
    "path": "/p3",
    "method": "POST",
    "timeoutMs": 8000,
    "retries": 5,
    "retryDelayMs": 500,
    "retryBackoffMultiplier": 2,
    "headers": {
      "Content-Type": "application/json"
    }
  },
  "logging": {
    "dir": "./logs",
    "console": true,
    "file": true,
    "httpFile": true,
    "jsonFile": true,
    "suppressStatus": false,
    "level": "info"
  },
  "decoder": {
    "reconnect": {
      "baseDelayMs": 1000,
      "maxDelayMs": 30000,
      "backoffFactor": 1.8,
      "jitterRatio": 0.2,
      "connectTimeoutMs": 8000
    }
  },
  "admin": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 8080,
    "token": null
  },
  "timer": {
    "enabled": true,
    "baseUrl": "https://example.com",
    "path": "/timerWebhook",
    "intervalSec": 30,
    "timeoutMs": 5000,
    "retries": 2,
    "retryDelayMs": 250,
    "retryBackoffMultiplier": 2,
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
